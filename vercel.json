{
  "builds": [
    {
      "src": "core/asgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "buildCommand": "python3 manage.py collectstatic --noinput",
  "outputDirectory": "staticfiles",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/media/(.*)",
      "dest": "/media/$1"
    },
    {
      "src": "/(.*)",
      "dest": "core/asgi.py"
    }
  ]
}
